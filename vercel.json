{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { 
      "src": "/api/users/([^/]+)", 
      "dest": "/api/users/[id].ts?id=$1" 
    },
    { 
      "src": "/api/users", 
      "dest": "/api/users/index.ts" 
    },
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1.ts" 
    }
  ]
}